<%- include('../../partials/header.ejs') %> 
<%- include('../../partials/navbar.ejs') %> 
<%- include('../../partials/sidebar.ejs') %> 

<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Payment</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/payment">Payment</a></li>
            <li class="breadcrumb-item active">Edit Payment</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Edit Payment Form</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/payment/edit/<%= payment._id  %>?_method=PUT" method="POST">
              <div class="card-body">
                <div class="form-group">
                  <label for="type">Payment Type</label>
                  <input type="text" value="<%= payment.type %>" name="type" class="form-control" id="type" placeholder="Enter Payment Type" required>
                </div>
                <div class="form-group">
                  <label>Bank</label>
                  <select class="form-control select2" style="width: 100%;" name="banks" required>
                    <option selected="selected">Choose Bank</option>
                    <% banks.forEach (bank => { %>
                      <option value="<%= bank._id %>"
                      <% if (bank._id.toString() === payment.banks._id.toString()) { %>
                        selected
                      <% } %>  
                      ><%= bank.name %> - <%= bank.bank %> - <%= bank.bankAccount %></option>
                    <% }) %>
                  </select>
                </div>
                
              </div>
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>
          </div>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include('../../partials/footer.ejs') %> 
<%- include('../../partials/script.ejs') %> 